{# @var meta_entity \K3ssen\GeneratorBundle\MetaData\MetaEntityInterface #}
{# @var generate_options \K3ssen\GeneratorBundle\Generator\CrudGenerateOptions #}
{% block usages %}
{% block use_entity %}
use {{ meta_entity.fullClassName }};
{% endblock %}
{% block use_form_type %}
use {{ meta_entity.fullClassName | replace({'\\Entity':'\\Form'}) }}Type;
{% endblock %}
{% block usage_voter %}
{% if generate_options.useVoter %}
use {{ meta_entity.fullClassName | replace({'\\Entity\\':'\\Security\\'}) }}Voter;
{% endif %}
{% endblock %}
{% block use_repository %}
{% if generate_options.useDatatable %}
use {{ meta_entity.fullClassName | replace({'\\Entity\\':'\\Datatable\\'}) }}Datatable;
{% else %}
use {{ meta_entity.repositoryFullClassName }};
{% endif %}
{% endblock %}
{% block use_route %}
use Symfony\Component\Routing\Annotation\Route;
{% endblock %}
{% block use_request %}
use Symfony\Component\HttpFoundation\Request;
{% endblock %}
{% block use_response %}
use Symfony\Component\HttpFoundation\Response;
{% endblock %}
{% block use_extended_controller %}
{% if subdir or meta_entity.namespace | replace({'\\Entity': ''}) != generate_options.defaultBundleNamespace %}
use {{ generate_options.defaultBundleNamespace }}\Controller\AbstractController;
{% endif %}
{% endblock %}
{% endblock %}