{# @var meta_entity \K3ssen\GeneratorBundle\MetaData\MetaEntityInterface #}
{% block new_action %}

{% block new_action_annotations %}
    /**
     * @Route("/new", name="{{ route_prefix }}_new")
     * @Method({"GET", "POST"})
     */
{% endblock %}
{% block new_action_method_definition %}
    public function newAction(Request $request, {{ meta_entity.name }}Repository $repo): Response
{% endblock %}
    {
{% block new_action_object_creation %}
        ${{ entity_variable }} = new {{ meta_entity.name }}();
{% endblock %}
{% block new_actions_security_check %}
{%- if generate_options.usingVoters %}
        $this->denyAccessUnlessGranted({{ meta_entity.name }}Voter::CREATE, ${{ entity_variable }});

{% endif %}
{% endblock %}
{% block new_action_form_creation %}
        $form = $this->createForm({{ meta_entity.name }}Type::class, ${{ entity_variable }});
{% endblock %}
{% block new_action_form_handling %}
        $form->handleRequest($request);
        if ($form->isSubmitted() && $form->isValid()) {
{% block new_action_save_entity %}
            $repo->save(${{ entity_variable }});
{% endblock %}
{% block new_action_flash_message %}
            $this->addFlash('success', '{{ meta_entity.name }} has been created');
{% endblock %}
{% block new_action_redirect_response %}
            return $this->redirectToRoute('{{ route_prefix }}_show', ['{{ id_name }}' => ${{ entity_variable }}->{{ id_getter }}]);
{% endblock %}
        }
{% endblock %}
{% block new_action_return_response %}
        return $this->render('{{ view_prefix }}/new.html.twig', [
            '{{ meta_entity.name | tabalize }}' => ${{ entity_variable }},
            'form' => $form->createView(),
        ]);
{% endblock %}
    }
{% endblock new_action %}