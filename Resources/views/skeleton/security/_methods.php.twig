{% block methods %}

    /**
     * @var {{ meta_entity.name }}|null $object the entity object
     */
    protected function voteOnAttribute($attribute, $object = null): bool
    {
        switch ($attribute) {
            case self::INDEX:
{% if generate_options.usingDatatable %}
            case self::SEARCH:
{% endif %}
            case self::CREATE:
                return $this->isAdmin();
            case self::VIEW:
{% if generate_options.usingWriteActions %}
            case self::EDIT:
            case self::DELETE:
{% endif %}
                return $object && $this->isAdmin();
        }
        return false;
    }
